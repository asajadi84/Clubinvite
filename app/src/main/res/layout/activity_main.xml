<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_marginTop="64dp"
        android:id="@+id/phone_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="phone"
        android:hint="شماره موبایل به فرمت 09123456789"
        android:autofillHints="phoneNumber"
        android:maxLength="11"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/invite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="ارسال دعوتنامه"
        android:enabled="false"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/invite_wait"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <Button
        android:id="@+id/cafebazaar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="دریافت کلاب هاوس از بازار"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/telegram_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="پشتیبانی تلگرام"
        tools:ignore="HardcodedText" />
</LinearLayout>